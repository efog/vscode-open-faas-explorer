{
	"name": "open-faas-explorer",
	"displayName": "open-faas explorer",
	"description": "A VS Code extension for Open-FaaS",
	"repository": {
		"url": "https://github.com/efog/vscode-open-faas-explorer"
	},
	"publisher": "efog",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:openfaas-explorer"
	],
	"main": "./extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "openfaas-explorer",
					"title": "OpenFaaS Explorer",
					"icon": "media/logo.svg"
				}
			]
		},
		"views": {
			"openfaas-explorer": [
				{
					"id": "openfaas-explorer",
					"name": "Gateways"
				}
			]
		},
		"commands": [
			{
				"command": "openfaas-explorer.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "openfass-explorer.showFunction",
				"title": "Show Function Details"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "openfaas-explorer.refreshEntry",
					"when": "view == openfaas-explorer",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"eslint": "^5.13.0",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"bluebird": "^3.5.5",
		"isurl": "^4.0.1",
		"js-yaml": "^3.13.1",
		"mocha-junit-reporter": "^1.22.0",
		"whatwg-url": "^7.0.0"
	}
}
